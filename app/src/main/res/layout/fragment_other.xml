<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyStore.OtherFragment"
    >
    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:orientation="horizontal">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imProfile"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="35dp"
                app:civ_border_color="#e8e8e8"
                app:civ_border_width="2dp" />


            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/kanit"
                android:layout_marginTop="13dp"
                android:textColor="#000000"
                android:textSize="23dp" />

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="139dp"
            android:background="#e8e8e8" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="140dp"
            android:layout_above="@+id/btnLogout"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="120dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tvStore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="start"
                android:drawableEnd="@drawable/ic_cright_black_24dp"
                android:drawablePadding="223dp"
                android:fontFamily="@font/kanit"
                android:text="ร้านของฉัน"
                android:textColor="#000000"
                android:textSize="18dp" />


            <TextView
                android:id="@+id/tvProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="8dp"
                android:drawableEnd="@drawable/ic_cright_black_24dp"
                android:drawablePadding="183dp"
                android:fontFamily="@font/kanit"
                android:text="สมัครผู้ปล่อยเช่า"
                android:textColor="#000000"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tvAbout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tvStore"
                android:layout_alignParentEnd="true"
                android:layout_gravity="start"
                android:layout_marginTop="8dp"
                android:drawableEnd="@drawable/ic_cright_black_24dp"
                android:drawablePadding="223dp"
                android:fontFamily="@font/kanit"
                android:text="เกี่ยวกับเรา"
                android:textColor="#000000"
                android:textSize="18dp" />


        </LinearLayout>

        <Button
            android:id="@+id/btnLogout"

            android:layout_width="285dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_shape_white"
            android:fontFamily="@font/kanit"
            android:gravity="center"
            android:text="ออกจากระบบ"
            android:textSize="18dp"

            />


    </RelativeLayout>

</FrameLayout>
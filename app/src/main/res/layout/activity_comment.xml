<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".comment.CommentActivity">


    <EditText
        android:id="@+id/edtComment"
        android:layout_width="286dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="13dp"
        android:ems="10"
        android:fontFamily="@font/kanit"
        android:hint="แสดงความคิดเห็น"
        android:inputType="textPersonName"
        android:paddingStart="10dp" />

    <ImageView
        android:id="@+id/icOk"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignTop="@+id/edtComment"
        android:layout_marginStart="7dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="24dp"
        android:layout_toEndOf="@+id/edtComment"
        android:background="@drawable/ic_send_24dp" />

    <ListView
        android:id="@+id/LvComment"
        android:fontFamily="@font/kanit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="0dp"
        android:layout_above="@id/edtComment" />


</RelativeLayout>
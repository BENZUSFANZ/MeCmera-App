<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".User.IDprofileFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imProfile"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    app:civ_border_color="#e8e8e8"
                    app:civ_border_width="2dp" />

                <TextView
                    android:id="@+id/tvSetting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginBottom="5dp"
                    android:layout_alignEnd="@id/btnLogin"
                    android:layout_alignParentBottom="true"
                    android:drawableLeft="@drawable/ic_settings_24dp"
                    android:fontFamily="@font/kanit"
                    android:textColor="#949494"
                    android:text=" การตั้งค่า" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:fontFamily="@font/kanit"
                    android:text="ชื่อ"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="309dp"
                    android:layout_height="wrap_content"
                    android:background="#ececec"
                    android:textColor="#000000"
                    android:fontFamily="@font/kanit"
                    android:padding="3dp"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:fontFamily="@font/kanit"
                    android:text="สกุล"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/last_name"
                    android:layout_width="309dp"
                    android:layout_height="wrap_content"
                    android:background="#ececec"
                    android:textColor="#000000"
                    android:fontFamily="@font/kanit"
                    android:padding="3dp"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:fontFamily="@font/kanit"
                    android:text="เกิดวันที่"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/birth"
                    android:layout_width="309dp"
                    android:layout_height="wrap_content"
                    android:background="#ececec"
                    android:textColor="#000000"
                    android:ems="10"
                    android:fontFamily="@font/kanit"
                    android:inputType="date"
                    android:padding="3dp"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:fontFamily="@font/kanit"
                    android:text="อีเมล"
                    android:textSize="18dp" />


                <TextView
                    android:id="@+id/email"
                    android:layout_width="309dp"
                    android:layout_height="wrap_content"
                    android:background="#ececec"
                    android:textColor="#000000"
                    android:ems="10"
                    android:fontFamily="@font/kanit"
                    android:inputType="textEmailAddress"
                    android:padding="3dp"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:fontFamily="@font/kanit"
                    android:text="เบอร์โทรศัพท์"
                    android:textSize="18dp" />


                <TextView
                    android:id="@+id/tel"
                    android:layout_width="309dp"
                    android:layout_height="wrap_content"
                    android:background="#ececec"
                    android:textColor="#000000"
                    android:ems="10"
                    android:fontFamily="@font/kanit"
                    android:inputType="phone"
                    android:padding="3dp"
                    android:textSize="18dp" />


            </LinearLayout>

        </ScrollView>




    </RelativeLayout>


    <android.support.v7.widget.Toolbar
        android:id="@+id/tbIDuser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

</FrameLayout>
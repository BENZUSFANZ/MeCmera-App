<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Notifications.DetailBookingFragment">

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/toolbar3"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="60dp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imProfile"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="0dp"
            android:background="@drawable/ic_account_circle_black_24dp"
            app:civ_border_color="#e8e8e8"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="11dp"
            android:fontFamily="@font/kanit"
            android:text="BenzUsfanz"
            android:textColor="#000000"
            android:textSize="18dp" />


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="end"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="11dp"
                android:fontFamily="@font/kanit"
                android:text="ราคารวม"
                android:textColor="#848484"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="11dp"
                android:fontFamily="@font/kanit"
                android:text="250"
                android:textColor="@color/colorPrimary"
                android:textSize="18dp" />


            <TextView
                android:id="@+id/icMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"
                android:drawableLeft="@drawable/ic_more_black_24dp" />

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/l2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l1"
        android:layout_marginTop="4dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imStore"
            android:layout_width="fill_parent"
            android:layout_height="172dp"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/tvCaption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/kanit"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:text="Benzfffffffff"
            android:textColor="#000000"
            android:textSize="16dp" />

    </LinearLayout>


    <TextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/kanit"
        android:text="รายละเอียดการเช่า"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/t2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t1"
        android:layout_alignStart="@+id/t1"
        android:layout_marginStart="0dp"
        android:layout_marginTop="8dp"
        android:drawableStart="@drawable/ic_event_start_black_24dp"
        android:fontFamily="@font/kanit"
        android:text=" วันที่จอง"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/t2"
        android:layout_marginStart="4dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/t2"
        android:fontFamily="@font/kanit"
        android:inputType="date"
        android:padding="3dp"
        android:text="1996/10/31"
        android:textColor="#000000"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/t3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t2"
        android:layout_alignStart="@+id/t2"
        android:layout_marginStart="0dp"
        android:layout_marginTop="8dp"
        android:drawableStart="@drawable/ic_event_end_black_24dp"
        android:fontFamily="@font/kanit"
        android:text=" วันที่คืน"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/tvDateOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/t3"
        android:layout_marginStart="4dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/t3"
        android:fontFamily="@font/kanit"
        android:inputType="date"
        android:padding="3dp"
        android:text="1996/10/31"
        android:textColor="#000000"
        android:textSize="16dp" />

    <Button
        android:id="@+id/btnCancelBooking"
        android:layout_width="100dp"
        android:layout_height="32dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:background="@drawable/button_shape_white"
        android:fontFamily="@font/kanit"
        android:text="ยกเลิก" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="100dp"
            android:layout_height="32dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_shape_white"
            android:fontFamily="@font/kanit"
            android:text="ยกเลิก" />

        <Button
            android:id="@+id/btnOk"
            android:layout_width="100dp"
            android:layout_height="32dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/button_shape_orange"
            android:fontFamily="@font/kanit"
            android:text="ตอบรับ" />
    </LinearLayout>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:id="@+id/Lv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="@font/kanit"
                android:text="ชื่อ"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/name"
                android:layout_width="309dp"
                android:layout_height="wrap_content"
                android:background="#ececec"
                android:fontFamily="@font/kanit"
                android:padding="3dp"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="@font/kanit"
                android:text="สกุล"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/last_name"
                android:layout_width="309dp"
                android:layout_height="wrap_content"
                android:background="#ececec"
                android:fontFamily="@font/kanit"
                android:padding="3dp"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="@font/kanit"
                android:text="เกิดวันที่"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/birth"
                android:layout_width="309dp"
                android:layout_height="wrap_content"
                android:background="#ececec"
                android:ems="10"
                android:fontFamily="@font/kanit"
                android:inputType="date"
                android:padding="3dp"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="@font/kanit"
                android:text="อีเมล"
                android:textSize="18dp" />


            <EditText
                android:id="@+id/email"
                android:layout_width="309dp"
                android:layout_height="wrap_content"
                android:background="#ececec"
                android:ems="10"
                android:fontFamily="@font/kanit"
                android:inputType="textEmailAddress"
                android:padding="3dp"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="@font/kanit"
                android:text="เบอร์โทรศัพท์"
                android:textSize="18dp" />


            <EditText
                android:id="@+id/tel"
                android:layout_width="309dp"
                android:layout_height="wrap_content"
                android:background="#ececec"
                android:ems="10"
                android:fontFamily="@font/kanit"
                android:inputType="phone"
                android:padding="3dp"
                android:textSize="18dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/kanit"
                android:text="สร้างบัญชีผู้ใช้"
                android:textSize="19dp" />


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imProfile"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_account_circle_black_24dp"
                app:civ_border_color="#777777"
                app:civ_border_width="2dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="@font/kanit"
                android:text="ชื่อผู้ใช้"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/username"
                android:layout_width="309dp"
                android:layout_height="wrap_content"
                android:background="#ececec"
                android:fontFamily="@font/kanit"
                android:padding="3dp"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="@font/kanit"
                android:text="รหัสผ่าน"
                android:textSize="18dp" />


            <EditText
                android:id="@+id/password"
                android:layout_width="309dp"
                android:layout_height="wrap_content"
                android:background="#ececec"
                android:ems="10"
                android:fontFamily="@font/kanit"
                android:inputType="textPassword"
                android:padding="3dp"
                android:textSize="18dp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="100dp"
                    android:layout_height="32dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_shape_white"
                    android:fontFamily="@font/kanit"
                    android:text="ยกเลิก" />

                <Button
                    android:id="@+id/btnRegis"
                    android:layout_width="100dp"
                    android:layout_height="32dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_shape_orange"
                    android:fontFamily="@font/kanit"
                    android:text="ตกลง" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>


</RelativeLayout>
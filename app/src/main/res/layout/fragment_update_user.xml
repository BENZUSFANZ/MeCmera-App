<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".User.UpdateUserFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imProfile"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    app:civ_border_color="#e8e8e8"
                    app:civ_border_width="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:fontFamily="@font/kanit"
                    android:text="ชื่อ"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/name"
                    android:layout_width="309dp"
                    android:layout_height="wrap_content"
                    android:background="#ececec"
                    android:fontFamily="@font/kanit"
                    android:padding="3dp"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:fontFamily="@font/kanit"
                    android:text="สกุล"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/last_name"
                    android:layout_width="309dp"
                    android:layout_height="wrap_content"
                    android:background="#ececec"
                    android:fontFamily="@font/kanit"
                    android:padding="3dp"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:fontFamily="@font/kanit"
                    android:text="เกิดวันที่"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/birth"
                    android:layout_width="309dp"
                    android:layout_height="wrap_content"
                    android:background="#ececec"
                    android:ems="10"
                    android:fontFamily="@font/kanit"
                    android:inputType="date"
                    android:padding="3dp"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:fontFamily="@font/kanit"
                    android:text="อีเมล"
                    android:textSize="18dp" />


                <EditText
                    android:id="@+id/email"
                    android:layout_width="309dp"
                    android:layout_height="wrap_content"
                    android:background="#ececec"
                    android:ems="10"
                    android:fontFamily="@font/kanit"
                    android:inputType="textEmailAddress"
                    android:padding="3dp"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:fontFamily="@font/kanit"
                    android:text="เบอร์โทรศัพท์"
                    android:textSize="18dp" />


                <EditText
                    android:id="@+id/tel"
                    android:layout_width="309dp"
                    android:layout_height="wrap_content"
                    android:background="#ececec"
                    android:ems="10"
                    android:fontFamily="@font/kanit"
                    android:inputType="phone"
                    android:padding="3dp"
                    android:textSize="18dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnCancel"
                        android:layout_width="100dp"
                        android:layout_height="32dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/button_shape_white"
                        android:fontFamily="@font/kanit"
                        android:text="ยกเลิก" />

                    <Button
                        android:id="@+id/btnUpdate"
                        android:layout_width="100dp"
                        android:layout_height="32dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/button_shape_orange"
                        android:fontFamily="@font/kanit"
                        android:text="ตกลง" />

                </LinearLayout>




            </LinearLayout>

        </ScrollView>




    </RelativeLayout>


    <android.support.v7.widget.Toolbar
        android:id="@+id/tbUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />
</FrameLayout>